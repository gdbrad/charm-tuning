<!-- Input file for `chroma` that will load in a configuration file and compute
     a pion correlator from that. -->
<chroma>
  <!-- Load the configuration from a file. -->
  <Cfg>
    <cfg_type>SZINQIO</cfg_type>
    <cfg_file>{{ cfg_path }}b{{ beta }}_ms{{ ms }}_mud-{{ mud }}_s{{ NL }}t{{ NT }}-{{ P }}-n_cfg_{{ cfg_id }}.lime</cfg_file>
    <!-- if the "parallel_io" parameter is not here and set to "true", 
     one can get VBUFF errors on juwels -->
    <parallel_io>true</parallel_io>

  </Cfg>
  <Param>
    <nrow>{{ NL }} {{ NL }} {{ NL }} {{ NT }}</nrow>
    <InlineMeasurements>

    <!-- Create a single source. -->

    <elem>
      <Name>MAKE_SOURCE</Name>
      <Frequency>1</Frequency>
      <Param>
        <version>6</version>
