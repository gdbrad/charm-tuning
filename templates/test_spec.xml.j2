              <RelaxationOmegaOuter>1.0</RelaxationOmegaOuter>
              
              <!-- BJOO: In a pinch you can do the setup on the CPUs -->
             <SetupOnGPU>1 1</SetupOnGPU>
            </MULTIGRIDParams>

