            <!-- BJOO: Whether you want antiperiodic BC-s in Time -->
            <AntiPeriodicT>true</AntiPeriodicT>
            
            <!-- BJOO: Outer solver type and verbosity -->
            <SolverType>GCR</SolverType>
            <Verbose>false</Verbose>
            
